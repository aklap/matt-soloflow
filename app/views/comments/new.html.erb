<div>
<h2> <%= @question.title %> </h2>
<%= @question.content %>
<p>Votes <%= @question.votes.count %> | Answers: <%= @question.answers.length %> | Author: <%= @question.user.username %> </p>
<p> <%= link_to 'Up' %> <%= link_to 'Down' %> </p>
<p> Tags: <% @tags.each do |tag| %> <%= link_to tag.category %>  <% end %></p>

</div>


<%= render partial: "comments/new", layout: false, locals: {question: question} %>



<%= form_for @comment do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%=f.hidden_field :commentable_type, :value => question.class.name %>
  <%=f.hidden_field :commentable_id, :value => question.id %>
  <%= f.submit %>
<% end %>
